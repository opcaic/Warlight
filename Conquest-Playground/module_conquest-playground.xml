<?xml version="1.0" encoding="UTF-8"?>
<project name="module_conquest-playground" default="compile.module.conquest-playground">
  <dirname property="module.conquest-playground.basedir" file="${ant.file.module_conquest-playground}"/>
  
  <property name="module.jdk.home.conquest-playground" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.conquest-playground" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.conquest-playground" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.conquest-playground" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="conquest-playground.output.dir" value="${module.conquest-playground.basedir}/bin"/>
  <property name="conquest-playground.testoutput.dir" value="${module.conquest-playground.basedir}/bin"/>
  
  <path id="conquest-playground.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="conquest-playground.module.production.classpath">
    <path refid="${module.jdk.classpath.conquest-playground}"/>
    <pathelement location="${conquest.output.dir}"/>
    <pathelement location="${conquest-bots.output.dir}"/>
  </path>
  
  <path id="conquest-playground.runtime.production.module.classpath">
    <pathelement location="${conquest-playground.output.dir}"/>
    <path refid="conquest.runtime.production.module.classpath"/>
    <path refid="conquest-bots.runtime.production.module.classpath"/>
  </path>
  
  <path id="conquest-playground.module.classpath">
    <pathelement location="${conquest-playground.output.dir}"/>
    <path refid="${module.jdk.classpath.conquest-playground}"/>
    <pathelement location="${conquest.output.dir}"/>
    <pathelement location="${conquest-bots.output.dir}"/>
  </path>
  
  <path id="conquest-playground.runtime.module.classpath">
    <pathelement location="${conquest-playground.output.dir}"/>
    <path refid="conquest.runtime.module.classpath"/>
    <path refid="conquest-bots.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.conquest-playground">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.conquest-playground">
    <patternset refid="excluded.from.module.conquest-playground"/>
  </patternset>
  
  <path id="conquest-playground.module.sourcepath">
    <dirset dir="${module.conquest-playground.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.conquest-playground" depends="compile.module.conquest-playground.production,compile.module.conquest-playground.tests" description="Compile module Conquest-Playground"/>
  
  <target name="compile.module.conquest-playground.production" depends="register.custom.compilers,compile.module.conquest,compile.module.conquest-bots" description="Compile module Conquest-Playground; production classes">
    <mkdir dir="${conquest-playground.output.dir}"/>
    <javac2 destdir="${conquest-playground.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.conquest-playground}/javac">
      <compilerarg line="${compiler.args.conquest-playground}"/>
      <bootclasspath refid="conquest-playground.module.bootclasspath"/>
      <classpath refid="conquest-playground.module.production.classpath"/>
      <src refid="conquest-playground.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.conquest-playground"/>
    </javac2>
    
    <copy todir="${conquest-playground.output.dir}">
      <fileset dir="${module.conquest-playground.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.conquest-playground.tests" depends="register.custom.compilers,compile.module.conquest-playground.production" description="compile module Conquest-Playground; test classes" unless="skip.tests"/>
  
  <target name="clean.module.conquest-playground" description="cleanup module">
    <delete dir="${conquest-playground.output.dir}"/>
    <delete dir="${conquest-playground.testoutput.dir}"/>
  </target>
</project>